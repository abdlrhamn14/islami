<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--    كده كده هتتحط جو الكونتينر اللي هو فريم لاي اوت جوا الكونتنت-->
    <ImageView
        android:id="@+id/image_quran_fragment"
        android:layout_width="205dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/quran_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_quran_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_quran_fragment"
        tools:listitem="@layout/item_chapter_quran" />

</androidx.constraintlayout.widget.ConstraintLayout>